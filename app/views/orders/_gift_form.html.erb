<%= form_with model: order, local: true  do |form| %>
  <%= form.hidden_field :product_id %>
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :shipping_name, "Parent Name", id: "shipping-name" %>
      <%= form.text_field :shipping_name, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :child_full_name, "Child's Name", id: "childs-name" %>
      <%= form.text_field :child_full_name, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :child_birthdate, "Child's Birthdate (or expected date)", id: "childs-birthdate" %>
      <%= form.text_field :child_birthdate, class: "form-control" %>
      <small id="passwordHelpBlock" class="form-text text-muted">
        Use format YYYY-MM-DD
      </small>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label "From" %>
      <%= form.text_field :from, class: "form-control", placeholder: "Grammy and Grampy" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label "Message (Optional)" %>
      <%= form.text_area :message, class: "form-control", placeholder: "Message to child"%>
    </div>
  </div>
  <div class="border rounded p-3 bg-light">
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.label :credit_card_number %>
        <%= form.password_field :credit_card_number, class: "form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-3">
        <%= form.label :expiration_month %>
        <%= form.text_field :expiration_month, class: "form-control" %>
      </div>
      <div class="form-group col-md-3">
        <%= form.label :expiration_year %>
        <%= form.text_field :expiration_year, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="p-3">
    <%= form.submit("Purchase", class: "btn btn-primary btn-lg") %>
  </div>
<% end %>